<%- include('partials/header') %>

<div class="container my-5">
  <h2 class="mb-4 text-center">Welcome, <%= user.name %> (<%= user.role %>)</h2>

  <div class="card p-4 shadow-sm mb-4">
    <p><strong>Email:</strong> <%= user.email %></p>
    <% if (user.role === 'Doctor') { %>
      <p><strong>Specialization:</strong> <%= user.specialization || 'N/A' %></p>
    <% } %>
  </div>

  <div class="d-flex justify-content-center">
    <% if (user.role === 'Doctor') { %>
      <a href="/appointment/doctor/<%= user.id %>" class="btn btn-outline-primary me-2">
        View Appointments
      </a>
    <% } else { %>
      <a href="/nurse/patients" class="btn btn-outline-success">
        View Assigned Patients
      </a>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
